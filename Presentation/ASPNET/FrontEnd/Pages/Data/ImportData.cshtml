@page
@{
    ViewData["Title"] = "Import Data";
}

<div id="app">
    <div class="container mt-5">
        <div class="card shadow-lg p-4">
            <h2 class="text-center mb-4">Import Data</h2>
            <form v-on:submit.prevent="handleSubmit">
                <div class="mb-3">
                    <label for="file1" class="form-label">Upload CSV File 1</label>
                    <input class="form-control" type="file" id="file1" ref="file1" accept=".csv">
                </div>

                <div class="mb-3">
                    <label for="file2" class="form-label">Upload CSV File 2</label>
                    <input class="form-control" type="file" id="file2" ref="file2" accept=".csv">
                </div>

                <div class="d-grid">
                    <button type="submit" class="btn btn-primary btn-lg" :disabled="state.isSubmitting">
                        <span v-if="state.isSubmitting">Uploading...</span>
                        <span v-else>Upload Files</span>
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section scripts {
    <script src="~/FrontEnd/Pages/Data/ImportData.cshtml.js"></script>
}
